<div class="loginPage">
  <h1
    style="padding-top:1.1rem; padding-bottom:0.5rem; padding-LEFT:0rem; text-align:center"
  >TRACE YOUR ROAD</h1>
  <br />
  <div class="card">
    <div class="container">
      <div id="card-form">
        <h3>EDIT PROFILE</h3>
        <hr class="cardHr" />
        <form action="/auth/edit-profile" method="POST">
          <label style="margin: 1rem">FIRST NAME:
            <input
            type="firstName" name="firstName" placeholder="Update First name"
            class="inputEdit"
            />
          </label style="margin: 1rem">
          <hr class="cardHr" />
          <label style="margin: 1rem">LAST NAME:
            <input
            type="lastName" name="lastName" placeholder="Update Last name"
              class="inputEdit"
            />
          </label style="margin: 1rem">
          <hr class="cardHr" />
          <label style="margin: 1rem">COUNTRY OF BIRTH:
            <input
            type="countryOfBirth" name="countryOfBirth" placeholder="Update Country Of Birth"
              class="inputEdit"
            />
            </label style="margin: 1rem">
            <hr/>
          <label style="margin: 1rem">RESIDENCE:
            <input
            type="residence" name="residence" placeholder="Update Residence" 
              class="inputEdit"
            />
          </label>
          <hr/>
          <br>
          <div style="align-items: center; display: flex; justify-content: center">
          <button class="textButtonUpdate" type="submit" action="/auth/profile">SAVE CHANGES</button>          
          </div>
        </form>
      </div>
    </div>
  </div>
  <br />
  <div class="button">
    <form class="buttonEdit" action="/auth/profile">
      <button class="textButtonEdit" type="submit">BACK TO PROFILE</button>
    </form>
  </div>
</div>